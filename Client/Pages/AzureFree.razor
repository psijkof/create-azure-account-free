@page "/azurefree"
@using BlazorApp.Client.Services
@inject LocalhostHttpClient _localhostService
<PageTitle>How to enable a free Azure account and discover free services?</PageTitle>
<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudPaper Class="pa-8">
        @((MarkupString)_azureArticle!)
    </MudPaper>
</MudContainer>
@code {
    private string? _azureArticle;

    protected override async Task OnInitializedAsync()
    {
        _azureArticle = await _localhostService?.HttpClient?.GetStringAsync("/azure.html")! ?? String.Empty;

        await base.OnInitializedAsync();
    }
}
